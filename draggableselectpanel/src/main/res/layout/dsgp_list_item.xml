<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_root"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dsgp_select_item_height"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_image_ico"
            android:layout_width="@dimen/dsgp_item_pic_size"
            android:layout_height="@dimen/dsgp_item_pic_size"
            android:layout_marginLeft="@dimen/dsgp_item_margin"
            android:layout_marginRight="@dimen/dsgp_item_margin" />

        <ImageView
            android:id="@+id/iv_favorite_ico"
            android:layout_width="@dimen/makeup_panel_item_favorite_size"
            android:layout_height="@dimen/makeup_panel_item_favorite_size"
            android:layout_alignBottom="@+id/iv_image_ico"
            android:layout_alignRight="@+id/iv_image_ico"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:src="@drawable/dgsp_item_favorite_ic"
            android:visibility="gone" />

        <CheckedTextView
            android:id="@+id/ctv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_image_ico"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxWidth="75dp"
            android:textColor="@color/makeup_panel_item_text_selector" />
    </RelativeLayout>
    />
</RelativeLayout>
